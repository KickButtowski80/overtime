
<div class="container-fluid">
    <div class="well  row ">
         <h1>Hi <%=admin.full_name%></h1>
         <div class="col-md-6 col-sm-6">
            <h4> Role: <%= admin.type %></h4>
            <h4> Today: <%=Date.today %> </h4>
         </div>
        <div class="col-md-6 col-sm-6">
              <!--TODO time doesn't get refershed and has to be refershed manually-->
            <h4> Time: <%=Time.now.strftime(" %I:%M%p") %></h4>
            <h4>Tasks:</h4>
            <ul>
                <li><%= link_to 'Items Pendingfor Approvel', '#items_pending'%> </li>
                <li><%= link_to 'Items Approved', '#items_approved'%></li>
            </ul>
        </div>         
    </div>
    <div class='pending-homepage row' >
        <h2 id='items_pending'>Items Pending Your Approval</h2>
        <hr/>
        <%= render partial: 'shared/pending_approval', locals: {pending_approvals: @pending_approvals}%>
    </div>    
    <div class="pending-homepage row">
        <h2 id='items_approved'>Confirmation Log</h2>
        <hr/>
        <%= render partial: 'shared/confirmation_log', locals: {recent_audit_items: @recent_audit_items}%>
        <hr/>
        <%= link_to 'View All Items', audit_logs_path, class: 'btn btn-primary'%>
    </div>
</div>
